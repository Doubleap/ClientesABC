<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="8dp"
        app:cardCornerRadius="1dp">
        <LinearLayout
            android:id="@+id/color_estado"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_medium">

            <TextView
                android:id="@+id/modelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Modelo"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/centro_suministro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/num_puertas"
                android:layout_marginStart="10dp"
                android:text="Centro Suministro"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/num_puertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/modelo"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/modelo"
                android:text="Puertas"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/disponibilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/centro_suministro"
                android:layout_marginLeft="10dp"
                android:text="Disponibilidad"
                android:textAppearance="?android:textAppearanceSmallPopupMenu"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/estado_text"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/disponibilidad"
                android:layout_marginLeft="10dp"
                android:text="Estado"
                android:textAppearance="?android:textAppearanceSmallPopupMenu"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/emplazamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/estado_text"
                android:layout_marginLeft="10dp"
                android:text="Emplazamiento"
                android:textAppearance="?android:textAppearanceSmall" />


            <com.rey.material.widget.LinearLayout
                android:id="@+id/menu_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/ver_detalle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_about"
                    android:tooltipText="Ver especificaciones del modelo" />


            </com.rey.material.widget.LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
