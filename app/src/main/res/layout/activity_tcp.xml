<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button android:id="@+id/button_TCP_server"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Transmitir" />

    <Button android:id="@+id/button_TCP_client"
        android:layout_width="fill_parent"
        android:layout_below="@+id/button_TCP_server"
        android:layout_height="wrap_content"
        android:text="Sincronizar(Wait)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Al seleccionar Enviar apareceran las IP disponibles, seleccione una:"
        android:textStyle="bold"
        android:id="@+id/tv"
        android:layout_below="@+id/button_TCP_client"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/listView"
        android:clickable="true"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true" />

    <Button
        android:text="change Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/change" />


</RelativeLayout>